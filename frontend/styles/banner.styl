.banner
  animation bounceInUp 1s
  height 575px
  background-color color_light-bg
  padding-top 50px
  position relative
  &__tabs
    width 100%
    max-width 970px
    margin 0 auto
    display flex
    margin-bottom 85px
    &_item
      font-size 15px
      font-family "Raleway"
      color color_gray-text
      text-transform uppercase
      width 50%
      text-align center
      line-height 50px
      border 1px solid color_gray-light
      position relative
      cursor pointer
      transition .3s
      &:hover
        border-color color_sea
      &:first-child
        border-right-color transparent
        &:hover
          border-right-color transparent
      &:last-child
        border-left-color transparent
        &:hover
          border-left-color transparent
      &--active
        border 1px solid color_blue !important
        &:hover
          border 1px solid color_blue !important
        &:after, &:before
          content ''
          position absolute
          border 10px solid transparent
          left calc(50% - 15px)
          margin-top 0
          z-index 2
        &:before
          border-top 10px solid color_blue
          top 50px
        &:after
          border-top 10px solid color_light-bg
          top 49px
  &__body
    width 100%
    display: flex
    padding-left 15px
    opacity: 1
    transition: opacity .3s
    visibility: visible
    max-width: 1000px
    margin: 0 auto
    &_half
      width: 50%
      &--right
        span
          text-align: right
        a
          float: right
    &.b
      float: left
      .banner__body_img
        right: calc(50% - 410px);
        left: auto
    &_img
      margin: 0 auto
      display: block
    &_title
      display block
      font-size 40px
      font-family "Raleway"
      color color_gray-text
      line-height 0.675
      text-transform capitalize
      margin-bottom 30px
    &_desc
      font-size 15px
      font-family "Raleway"
      color color_gray-text-light
      line-height 1.4
      text-align left
      display block
      margin-bottom 30px
    &_button
      display inline-block
      font-size 15px
      font-family "Raleway"
      text-transform uppercase
      color color_blue
      padding 18px 38px
      border 2px solid color_blue
      transition .3s
      cursor pointer
      &:hover
        border-color color_sea
        color color_sea

@media all and (max-width: 990px)
  .banner__body_img {
    left: calc(50% - 320px);
    width: 275px;
  }