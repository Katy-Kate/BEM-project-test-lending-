.footer
  &__top
    display: flex
    flex-direction: row
    justify-content: space-between
    padding: 10px 20px 20px
  &__bottom
    background:#1a0000
    color:#fff
    padding: 1px 0
    margin-top: 20px
    clear: both
    .footer-menu
      display: flex
      flex-direction: row
      justify-content: space-around
      -webkit-margin-before: 1em
      -webkit-margin-after: 1em
      -webkit-margin-start: 0px
      -webkit-margin-end: 0px
      -webkit-padding-start: 40px
      &__a
        color: #fff
        text-transform: uppercase
        text-decoration: none
.sign-email
  width: 50%
  text-align: center
  float: left
  display: inline-block
  &__label
    text-transform: uppercase
    margin-right: 10px
  &__input
    padding: 10px 10px
    width: 30%
    min-width: 100px
    margin: 20px
  &__submit
    padding: 10px 20px
    background: #1a0000
    color: #fff
    letter-spacing: 5px
    text-transform: uppercase
    font-weight: lighter
    border: none
    margin-bottom: 20px
    &_icon
      margin-right: 10px
      font-size: 16px
.post
  width: 50%
  text-align: right
  float: right
  display: inline-block
  padding: 20px
  box-sizing: border-box
  &__text
    margin:0

