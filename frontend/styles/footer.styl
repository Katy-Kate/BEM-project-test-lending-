.footer
  background color_black
  padding 70px 0 40px
  &__container
    width 50%
    margin 0 auto
  &_title
    font-size 40px
    font-family "Raleway"
    color color_white
    line-height 0.675
    text-transform capitalize
    text-align center
    position relative
    margin-bottom 60px
    &:after
      content ''
      height 2px
      width 170px
      background-color color_blue
      position absolute
      bottom -30px
      left calc(50% - 85px)
  &_subtitle
    font-size 13px
    font-family "Raleway"
    color color_white
    text-align center
    line-height 1.4
  &__form
    display flex
    flex-flow row wrap
    justify-content space-between
    &_input
      width 100%
      background transparent
      border none
      border-bottom 2px solid white
      height 50px
      padding-left 20px
      color color_white
      font-size 15px
      font-family "Raleway"
      box-sizing: border-box
      &::-webkit-input-placeholder
        color color_white
      &:-moz-placeholder
        color color_white
      &::-moz-placeholder
        color color_white
      &:-ms-input-placeholder
        color color_white
      &:focus
        outline none
    &_submit
      font-size 15px
      font-family "Raleway"
      color color_white
      text-transform capitalize
      font-weight 100
      padding 15px 35px
      border 1px solid color_blue
      margin-top 30px
      float right
  &__input-wrap
    width 100%
    margin-top 60px
    position relative
    &:before, &:after
      content ''
      width 2px
      height 10px
      background-color color_white
      display block
      position absolute
      bottom 0
    &:after
      right 0
    &--half
      width 48%
  &__copyright
    font-size 15px
    font-family "Raleway"
    color color_white
    margin-top 145px
    display block
    text-align center
    &_link
      color color_blue
      margin: 0 5px
