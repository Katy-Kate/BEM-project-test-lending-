.header
  &__top
    margin: 20px 100px
    display:flex
    flex-direction: row
    justify-content: space-around
  &__middle
    margin: 20px 100px
    display: flex
    flex-direction: row
    justify-content: space-between
.info-caption
  width: 100%
  &--center
    text-align: center
  &__item
    text-transform: uppercase
    font-size: 35px
    margin: 20px 0 0
.language
  border-right: 1px solid black!important
  border-left:none!important
  border-bottom :none!important
  border-top: none!important
  width: 75px
  font-size:10px
.sign-in
  &__btn
    border: none
    background: none
    font-style:italic
    font-size:14px
    -webkit-margin-before: 1em
    -webkit-margin-after: 1em
  &__text
    font-size:14px
    width: 35%
    &--italic
      font-style:italic
    &--strong
      font-weight: bold
.basket
  display: inline-block
  list-style: none
  text-align: right
  width: 50%
  -webkit-margin-before: 1em
  -webkit-margin-after: 1em
  &__item
    display:inline-block
    &_icon
      margin: 0 2px 0 10px
.info-returns
  width:100%
  &__item
    color:#787878
    font-size: 14px
    text-transform:uppercase
  &--right
    text-align: right
.info-delivery
  width:100%
  &__item
    color:#787878
    font-size: 14px
    text-transform:uppercase
    &--left
     text-align: left
.menu
  list-style: none
  padding: 0!important
  flex-direction: row
  display: flex
  justify-content: space-between
  -webkit-margin-before: 1em
  -webkit-margin-after: 1em
  -webkit-margin-start: 0
  -webkit-margin-end: 0
  -webkit-padding-start: 40px
  margin: 20px 100px
  &__a
    text-decoration none
    text-transform uppercase
    color: #000
    &_item
      &--active
        color:#9a2722
.slider
  position: relative
  overflow:hidden
  max-height: 550px
  &__content
    width: 100%
    position: absolute
    top: 25%
    color: #fff
    text-align: center
    text-transform: uppercase
    &__text:nth-child(1)
      font-size:14px
      letter-spacing : 5px
    &__text:nth-child(2)
      font-size: 40px
    &__btn
      border: none
      background: none
      color:#fff
      text-transform: uppercase
      border-left: 1px solid #fff
      padding: 20px
      font-size:14px
      letter-spacing : 5px
      -webkit-margin-before: 2em
      -webkit-margin-after: 2em