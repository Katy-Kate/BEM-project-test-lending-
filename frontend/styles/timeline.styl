.timeline
  @extend .container
  padding-top 170px
  &__wrap
    border-bottom-right-radius 4px
    border-top-right-radius 4px
    background rgba(255, 255, 255, .03)
    color color_gray-text
    margin 50px auto
    letter-spacing .5px
    position relative
    line-height 1.4em
    font-size 1.03em
    padding 0 50px 0 0
    list-style none
    text-align left
    font-weight 100
    max-width 45%
    left 11%
  &__item
    border-bottom 1px dashed rgba(255, 255, 255, .1)
    border-left 1px solid color_timeline
    padding 0 0 25px 70px
    position relative
    &:last-of-type
      padding-bottom 0
      margin-bottom 0
      border none
    &:before, &:after
      position absolute
      display block
      top 0
    &:before
      left -195px
      font-size 13px
      font-family "Raleway"
      color color_gray-text-light
      line-height 1.4
      content attr(data-date)
      text-align right
      font-weight 100
      min-width 120px
      top 25px
    &:after
      box-shadow 0 0 0 3px color_blue
      left -5px
      background color_white
      border-radius 50%
      height 10px
      width 10px
      content ""
      top 3px
    &_title
      font-size 17px
      font-family "Raleway"
      color color_gray-text
      line-height 1.588
      font-weight 500
      &:before
        content attr(data-title)
        left -230px
        font-size 17px
        font-family "Raleway"
        color color_blue
        line-height 1.4
        position absolute
    &_desc
      margin-top 10px
      font-size 13px
      font-family "Raleway"
      color color_gray-text-light
      line-height 1.4
    &_readmore
      display block
      font-size 13px
      font-family "Raleway"
      color color_blue
      line-height 2.077
      text-transform capitalize
      cursor pointer


.bounce-effect {
  visibility visible
  animation bounce-1 .6s
}

.slide-down-up-effect {
  visibility visible
  animation slide-down-up .6s
}

.slide-up-down-effect {
  visibility visible
  animation slide-up-down .6s
}

.slide-right-left-effect {
  visibility visible
  animation slide-right-left .6s
}

.slide-left-right-effect {
  display block
  animation slide-left-right .6s
}

.default-effect {
  visibility visible
  animation default-effect .6s ease-in-out
}

.flip-effect {
  visibility visible
  animation flip-effect .8s ease-in-out
}

.transformation-effect {
  visibility visible
  animation transformation-effect .8s ease
}

@keyframes bounce-1 {
  0% {
    opacity 0
    transform scale(.5)
  }
  60% {
    opacity 1
    transform scale(1.2)
  }
  100% {
    transform scale(1)
  }
}
@keyframes slide-down-up {
  0% {
    opacity 0
    transform translateY(20px)
  }
  60% {
    opacity 1
    transform translateY(-20px)
  }
  100% {
    transform translateY(0)
  }
}
@keyframes slide-up-down {
  0% {
    opacity 0
    transform translateY(-30px)
  }
  60% {
    opacity 1
    transform translateY(30px)
  }
  100% {
    transform translateY(0)
  }
}
@keyframes slide-right-left {
  0% {
    opacity 0
    transform translateX(20px)
  }
  60% {
    opacity 1
    transform translateX(-20px)
  }
  100% {
    transform translateX(0)
  }
}
@keyframes slide-left-right {
  0% {
    opacity 0
    transform translateX(-20px)
  }
  60% {
    opacity 1
    transform translateX(20px)
  }
  100% {
    transform translateX(0)
  }
}
@keyframes default-effect {
  0% {
    perspective 150
    transform rotateX(15deg)
    opacity 0
  }
  60% {
    transform rotateX(7deg)
    opacity 1
  }
  100% {
    transform rotateX(0)
  }
}
@keyframes flip-effect {
  0% {
    transform rotateY(180deg)
    transform-style preserve-3d
  }
  100% {
    transform rotateY(0)
    transform-style preserve-3d
  }
}
@keyframes transformation-effect {
  0% {
    transform rotate(360deg)
  }
  100% {
    transform rotate(0)
  }
}

.is-hidden {
  visibility hidden
}

.default-effect {
  visibility visible
  animation default-effect .6s ease-in-out
}


@media only screen and (max-width:959px)
  .timeline
    &__wrap
      max-width 85%
      margin 25px
    &__item
      &:before
        content ''
      &_descbefore
        content attr(data-date)
        display block
        font-size 14px
        margin-bottom 5px
